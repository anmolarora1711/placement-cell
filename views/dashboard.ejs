<link rel="stylesheet" href="/css/dashboard.css">

<div class="text-center mt-5">

    <!-- Messages -->
    <div class="row">
        <div class="col-4 offset-sm-4">
            <%- include('./partials/messages'); %>
        </div>
    </div>

    <!-- Student List -->
    <div class="container m-0 d-inline-block" style="width: 400px;">
        <div class="card mb-3">
            <h3>Students</h3>
        
            <ul class="list-group">
                <% for(student of students) { %>
                    <li class="student-name list-group-item d-flex justify-content-between align-items-center">
                        <%= student.name %>

                        <% for(company of student.interviews) { %>
                            <% if(company.company === requestedCompany && company.date === requestedDate) { %>
                                <span class="badge bg-primary rounded-pill">
                                <%= company.company %>
                                </span>

                                <span class="badge bg-primary rounded-pill">
                                <%= company.status %>
                                </span>          
                            <% } %>
                        <% } %>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>



    <!-- Interview List -->
    <div class="container m-0 d-inline-block" style="width: 400px;">

        <div class="card mb-3">
            <h3>Companies</h3>
        
            <ul class="list-group">
                <% for(company of companies) { %>
                    <li class="company-name list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <a href="/<%= company._id.company %>&<%= company._id.date %>">  
                            <%= company._id.company %>
                        </a>
                        <span class="badge bg-primary rounded-pill">
                            <%= company._id.date %>
                        </span>
                    </li>
                <% } %>
            </ul>   
        </div>
    </div>
</div>