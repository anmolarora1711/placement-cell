<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="card card-body shadow-lg p-3 mb-5 bg-white rounded">
                <h2 class="text-center mb-3">
                    <i class="fas fa-user-plus"></i>
                </h2>
                <h2 class="text-center mb-3">
                    Register
                </h2>
                <%- include('./partials/messages'); %>
                <form action="/user/create" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input
                        type="name"
                        id="name"
                        name="name"
                        class="form-control"
                        placeholder="Enter Name"
                    />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter Email"
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Create Password"
                    />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input
                        type="password"
                        id="password2"
                        name="password2"
                        class="form-control"
                        placeholder="Confirm Password"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="">
                    Register
                </button>
                </form>
                <p class="text-center lead mt-4">Have An Account? <a href="/user/login"><span class="font-weight-bold">Login</span></a></p>
            </div>
        </div>
    </div>
</div>
