<link rel="stylesheet" href="/css/login.css">

<div class="container login-container mt-5">
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="card card-body  shadow-lg p-3 mb-5 bg-white rounded">
                <h2 class="text-center mb-3">
                    <i class="fas fa-sign-in-alt"></i>
                </h2>
                <h2 class="text-center mb-3">
                    Login
                </h2>
                <%- include('./partials/messages'); %> 
                <form action="/user/create-session" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter Email"
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Enter Password"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
                <p class="text-center lead mt-4">No Account? <a href="/user/register"><span class="font-weight-bold">Register</span></a></p>
                </p>
            </div>
        </div>
    </div>
</div>
